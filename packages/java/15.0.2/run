#!/usr/bin/env bash

# Compile Java files
declare -a javaFiles
for file in "$@"; do
    if [[ "$file" == *.java ]]; then
        javaFiles+=("$file")
    else
        javaFiles+=("${file}.java")
    fi
done
javac "${javaFiles[@]}"

# Run the main Java class
mainClass="${1%.java}"
shift
java "$mainClass" "$@"